<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar android:layout_height="60dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background = "@drawable/button_action_main_nav"
    android:elevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/remove_Icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:elevation="5dp"
        android:padding="5dp"
        android:visibility="gone"
        android:src="@drawable/cancel"
        app:tint="#FFF" />


    <TextView
        android:id="@+id/appBarTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fontFamily="@font/battambang"
        android:text="ShopiQuik"
        android:textColor="#FFF"
        android:textSize="35dp" />


<!--    <androidx.appcompat.widget.SearchView-->
<!--        android:layout_margin="2dp"-->
<!--        android:id="@+id/search_view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:iconifiedByDefault="false"-->
<!--        android:layout_weight="1"-->
<!--        android:background="@drawable/searchbar"-->
<!--        app:queryHint="Search..." />-->

    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/teal_200"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginEnd="15dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp">


        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:elevation="5dp"
            android:background="@drawable/searchbar"
            android:fontFamily="@font/average_sans"
            android:hint="  Search Product..."
            android:textColorHint="@color/teal_200"
            android:imeOptions="actionSearch"
            android:inputType="text|textCapSentences"
            android:lines="1"
            android:textColor="@color/black"
            android:maxLines="1"
            android:paddingHorizontal="5dp"
            android:textStyle="normal" />

        <ImageButton
            android:id="@+id/searchProduct"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:elevation="5dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@drawable/searchiconback"
            android:src="@drawable/ic_baseline_search_24" />

    </LinearLayout>


    <ImageView
        android:id="@+id/fav_Icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:elevation="5dp"
        android:padding="5dp"
        android:src="@drawable/heart_unfilled_icon"
        app:tint="#FFF" />

    <TextView
        android:id="@+id/favoriteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9+"
        android:textSize="16sp"
        android:layout_margin="0dp"
        android:visibility="gone"
        android:padding="0dp"
        android:textColor="#FFF"
        android:layout_marginLeft="0dp"/>

    <ImageView
        android:id="@+id/infoIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:elevation="5dp"
        android:padding="5dp"
        android:src="@drawable/ic_outline_dashboard_24"
        app:tint="#FFF" />

    <ImageView
        android:id="@+id/search_Icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:elevation="5dp"
        android:padding="5dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_search_24"
        app:tint="#FFF" />
