<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get The Product You Want"
        android:fontFamily="@font/average_sans"
        android:textSize="20sp"
        android:textColor="#111"
        android:padding="16dp"
        android:gravity="center"
        android:background="@color/colorPrimary" />

    <!-- Dialog Content -->
    <LinearLayout
        android:id="@+id/dropdowns_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">


            <!-- First Dropdown and Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dropdown_dialog_backgroud"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/average_sans"
                    android:layout_marginBottom="5dp"
                    android:text="Category" />

                <Spinner
                    android:id="@+id/category_spinner"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        <!-- Forth Dropdown and Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dropdown_dialog_backgroud"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/average_sans"
                android:layout_marginBottom="5dp"
                android:text="Price" />

            <Spinner
                android:id="@+id/price_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/dialog_amount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/searchbar"
                android:fontFamily="sans-serif"
                android:hint="Enter amount..."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="#757575"
                android:imeOptions="actionSearch"
                android:inputType="number"
                android:lines="1"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:padding="10dp"
                android:visibility="gone"
                android:textStyle="normal" />


        </LinearLayout>

