<!--        android:elevation="5dp"-->
<!--        android:padding="5dp"-->
<!--        android:layout_marginEnd="20dp"-->
<!--        android:src="@drawable/ic_outline_home_24"-->
<!--        app:tint="#FFF" />-->

</LinearLayout>

</androidx.appcompat.widget.Toolbar>